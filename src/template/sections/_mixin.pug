mixin link(className, href,id)
	if href== '#'
		a(class= className, 
			href= href, 
			class!=attributes.class,
			aria-expanded!= attributes.aria-expanded,
			aria-controls!= attributes.aria-controls,
			data-toggle="modal"
			data-target= '#'+id, )
			block
	else
		a(class= className, 
			href= href+'.html', 
			class!=attributes.class,
			aria-pressed!=attributes.aria-pressed,
			role!=attributes.role)
			block

