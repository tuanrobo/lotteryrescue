block title
	title Xuất

block content
	+heading('Nhập mã SMS', '', undefined,'clear','user-management.html')
	+main()
		.row.pt-lg-5
			.col-12.col-md-8.col-lg-6.mx-auto.card.p-3.p-sm-5.shadow-sm.border-0.mb-5
